{
  "name": "spec-driven-nx-template",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "// Setup and initialization": "",
    "setup": "./scripts/setup.sh",
    "setup:deps": "pnpm install --frozen-lockfile",
    "setup:env": "cp .env.example .env.local",
    "nx:init": "pnpm dlx nx@latest init --nxCloud=false --pm=pnpm",

    "// Development": "",
    "dev": "nx serve",
    "dev:api": "nx serve api",
    "dev:web": "nx serve web-app",
    "dev:all": "nx run-many -t serve",
    "start": "pnpm dev",

    "// Building": "",
    "build": "nx run-many -t build",
    "build:api": "nx build api",
    "build:web": "nx build web-app",
    "build:libs": "nx run-many -t build --projects=tag:type:lib",
    "build:apps": "nx run-many -t build --projects=tag:type:app",
    "build:prod": "NODE_ENV=production nx run-many -t build",
    "build:docker": "docker-compose build",

    "// Testing": "",
    "test": "jest",
    "test:unit": "jest --config jest.config.ts",
    "test:integration": "jest --config jest.integration.config.ts",
    "test:contract": "jest --testPathPattern=contract",
    "test:e2e": "nx e2e web-app-e2e",
    "test:e2e:ui": "nx e2e web-app-e2e --ui",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:view": "open coverage/lcov-report/index.html",
    "test:all": "pnpm test:unit && pnpm test:integration && pnpm test:e2e",
    "test:ci": "pnpm test:all --passWithNoTests --coverage",

    "// Performance Testing": "",
    "test:performance": "tools/scripts/run-performance-tests.sh",
    "test:performance:api": "k6 run tools/performance/api-load.js",
    "test:performance:lambda": "k6 run tools/performance/lambda-perf.js",
    "test:performance:db": "k6 run tools/performance/db-stress.js",
    "test:load": "k6 run --vus 10 --duration 30s tools/performance/api-load.js",
    "test:stress": "k6 run --vus 50 --duration 60s tools/performance/api-load.js",

    "// Code Quality": "",
    "lint": "nx run-many -t lint",
    "lint:fix": "nx run-many -t lint --fix",
    "lint:staged": "lint-staged",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "nx run-many -t typecheck",
    "audit": "pnpm audit --audit-level moderate",
    "audit:fix": "pnpm audit --fix",

    "// Code Generation": "",
    "gen:openapi": "tsx scripts/gen-openapi.ts",
    "gen:asyncapi": "tsx scripts/gen-asyncapi.ts",
    "gen:component": "nx g @nx/react:component",
    "gen:lib": "nx g @nx/js:lib",
    "gen:app": "nx g @nx/node:app",

    "// Specification Management": "",
    "spec:plan": "spec-kit plan",
    "spec:openapi": "spec-kit openapi",
    "spec:asyncapi": "spec-kit asyncapi",
    "codegen": "pnpm spec:plan && pnpm spec:openapi && pnpm spec:asyncapi && pnpm gen:openapi && pnpm gen:asyncapi",

    "// Local Development Environment": "",
    "local:up": "docker compose up -d localstack",
    "local:down": "docker compose down",
    "local:logs": "docker compose logs -f localstack",
    "local:restart": "pnpm local:down && pnpm local:up",
    "local:bootstrap": "scripts/local/bootstrap-localstack.sh",
    "local:status": "docker compose ps",
    "local:clean": "docker compose down -v --remove-orphans",

    "// Database": "",
    "db:migrate": "nx run api:migrate",
    "db:seed": "nx run api:seed",
    "db:reset": "nx run api:db-reset",
    "db:studio": "nx run api:db-studio",
    "db:generate": "nx run api:db-generate",

    "// Deployment": "",
    "deploy": "nx deploy",
    "deploy:api": "nx deploy api",
    "deploy:web": "nx deploy web-app",
    "deploy:staging": "nx deploy --configuration=staging",
    "deploy:prod": "nx deploy --configuration=production",

    "// Release Management": "",
    "release": "./scripts/release.sh",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major",
    "release:beta": "./scripts/release.sh minor --beta",
    "release:alpha": "./scripts/release.sh patch --alpha",
    "release:dry": "./scripts/release.sh patch --dry-run",

    "// Maintenance": "",
    "clean": "./scripts/cleanup.sh",
    "clean:full": "./scripts/cleanup.sh --full",
    "clean:cache": "nx reset && pnpm store prune",
    "clean:deps": "rm -rf node_modules pnpm-lock.yaml && pnpm install",
    "update": "pnpm update --latest",
    "update:check": "pnpm outdated",

    "// Documentation": "",
    "docs:serve": "nx serve docs",
    "docs:build": "nx build docs",
    "docs:generate": "typedoc --out docs/api src",
    "docs:api": "swagger-codegen generate -i openapi.yaml -l html2 -o docs/api",

    "// Monitoring and Health": "",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "monitor": "pm2 monit",
    "logs": "pm2 logs",
    "logs:api": "pm2 logs api",
    "logs:web": "pm2 logs web",

    "// Security": "",
    "security:audit": "pnpm audit && npm audit",
    "security:check": "snyk test",
    "security:monitor": "snyk monitor",

    "// Utilities": "",
    "graph": "nx graph",
    "affected": "nx affected",
    "affected:test": "nx affected:test",
    "affected:build": "nx affected:build",
    "affected:lint": "nx affected:lint",
    "workspace:info": "nx report",
    "analyze": "nx run-many -t analyze",
    "bundle:analyze": "nx run web-app:analyze",

    "// Git Hooks": "",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "pre-push": "pnpm test:ci",

    "// Environment Specific": "",
    "start:dev": "NODE_ENV=development pnpm dev",
    "start:staging": "NODE_ENV=staging pnpm build && pnpm start",
    "start:prod": "NODE_ENV=production pnpm build && pnpm start",

    "// Debugging": "",
    "debug": "node --inspect-brk=0.0.0.0:9229",
    "debug:api": "nx serve api --inspect",
    "debug:test": "node --inspect-brk node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "@aws-sdk/client-eventbridge": "^3.0.0",
    "@aws-sdk/client-sqs": "^3.0.0",
    "@aws-sdk/client-s3": "^3.0.0",
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@openfeature/server-sdk": "^1.13.0",
    "@openfeature/web-sdk": "^1.5.0",
    "@openfeature/react-sdk": "^2.5.0",
    "@flipt-io/flipt-openfeature-provider": "^0.3.0",
    "js-yaml": "^4.1.0",
    "lru-cache": "^10.0.0",
    "pino": "^8.15.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.0",
    "@nx/jest": "21.5.3",
    "@nx/workspace": "21.5.3",
    "@nx/node": "21.5.3",
    "@nx/react": "21.5.3",
    "@nx/next": "21.5.3",
    "@nx/eslint": "21.5.3",
    "@nx/js": "21.5.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "nx": "21.5.3",
    "eslint": "^8.57.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "prettier": "^3.2.0"
  }
}